<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:core="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="item"
            type="com.trikot.metaviews.sample.metaviews.MetaNavigableListItem" />

        <variable
            name="lifecycleOwnerWrapper"
            type="com.mirego.trikot.metaviews.LifecycleOwnerWrapper" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:lifecycleOwnerWrapper="@{lifecycleOwnerWrapper}"
        core:meta_view="@{item}">

       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           app:layout_constraintTop_toTopOf="parent"
           app:layout_constraintBottom_toBottomOf="parent"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintEnd_toEndOf="parent"
           android:layout_marginTop="16dp"
           android:layout_marginStart="16dp"
           android:textSize="30dp"
           app:lifecycleOwnerWrapper="@{lifecycleOwnerWrapper}"
           core:meta_view="@{item.title}"
           tools:text="Click me..."/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
